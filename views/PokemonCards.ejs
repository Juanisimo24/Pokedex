<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/cards.css" />
    <script src="js/cards.js"></script>
    <title>PokemonCards</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a href="/">
        <img src="images/icon2.webp" alt="Pokedex Logo" style="width: 120px; height: 65px;">
      </a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      
      <div class="collapse navbar-collapse" id="navbarMenu">
        <ul class="navbar-nav ms-auto">
          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar">
            <button class="btn btn-outline-success" type="submit">search</button>
          </form>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Types
            </a>
            
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <!-- 20 opciones del menÃº desplegable -->
              <li><a class="dropdown-item" href="#">All</a></li>
              <li><img src="images/type/normal.png"><a class="dropdown-item" href="#">Normal</a></li>
              <li><img src="images/type/fighting.png"><a class="dropdown-item" href="#">Fighting</a></li>
              <li><img src="images/type/flying.png"><a class="dropdown-item" href="#">Flying</a></li>
              <li><img src="images/type/poison.png"><a class="dropdown-item" href="#">Poison</a></li>
              <li><img src="images/type/ground.png"><a class="dropdown-item" href="#">Ground</a></li>
              <li><img src="images/type/rock.png"><a class="dropdown-item" href="#">Rock</a></li>
              <li><img src="images/type/bug.png"><a class="dropdown-item" href="#">Bug</a></li>
              <li><img src="images/type/ghost.png"><a class="dropdown-item" href="#">Ghost</a></li>
              <li><img src="images/type/steel.png"><a class="dropdown-item" href="#">Steel</a></li>
              <li><img src="images/type/fire.png"><a class="dropdown-item" href="#">Fire</a></li>
              <li><img src="images/type/water.png"><a class="dropdown-item" href="#">Water</a></li>
              <li><img src="images/type/grass.png"><a class="dropdown-item" href="#">Grass</a></li>
              <li><img src="images/type/electric.png"><a class="dropdown-item" href="#">Electric</a></li>
              <li><img src="images/type/psychic.png"><a class="dropdown-item" href="#">Psychic</a></li>
              <li><img src="images/type/ice.png"><a class="dropdown-item" href="#">Ice</a></li>
              <li><img src="images/type/dragon.png"><a class="dropdown-item" href="#">Dragon</a></li>
              <li><img src="images/type/dark.png"><a class="dropdown-item" href="#">Dark</a></li>
              <li><img src="images/type/fairy.png"><a class="dropdown-item" href="#">Fairy</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="pokedex-header">
    
  </div>

  <div id="pokemon-info" class="container mt-4">
    <div class="pokemon-image-container">
      <img class="pokemon-image" src="<%= pokemon.image %>" alt="<%= pokemon.name %>">
      <div class="pokemon-name"><%= pokemon.name %></div>
    </div>
    
    <div class="type-badges">
      <% pokemon.types.forEach(function(type) { %>
        <span class="type-badge type-badge-<%= type %>"><%= type.charAt(0).toUpperCase() + type.slice(1) %></span>
      <% }); %>
    </div>

    <div class="details">
      <div class="progress-label">Experience: <%= pokemon.experience %></div>
      <div class="progress-label">Weight: <%= pokemon.weight %> kg</div>
      <div class="progress-label">Height: <%= pokemon.height %> ft</div>
      <div class="details">Moves: <%= pokemon.moves.join(', ') %></div>
      <div class="details">Abilities: <%= pokemon.abilities.join(', ') %></div>
    </div>
  </div>
      
</body>
</html>