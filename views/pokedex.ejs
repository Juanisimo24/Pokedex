<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" type="text/css" href="css/pokedex.css" />
    <script src="./js/pokedex.js"></script>
    <script src="./JavaScript/home.js"></script> 
    <title>Pokedex</title>

</head>
<body>
  
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <h2> Pokedex </h2>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      
      <div class="collapse navbar-collapse" id="navbarMenu">
        <ul class="navbar-nav ms-auto">
          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Buscar">
            <button class="btn btn-outline-success" type="submit">search</button>
          </form>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Types
            </a>
            
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <!-- 20 opciones del menú desplegable -->
              <li><a class="dropdown-item" href="#">All</a></li>
              <li><img src="images/type/normal.png"><a class="dropdown-item" href="#">Normal</a></li>
              <li><img src="images/type/fighting.png"><a class="dropdown-item" href="#">Fighting</a></li>
              <li><img src="images/type/flying.png"><a class="dropdown-item" href="#">Flying</a></li>
              <li><img src="images/type/poison.png"><a class="dropdown-item" href="#">Poison</a></li>
              <li><img src="images/type/ground.png"><a class="dropdown-item" href="#">Ground</a></li>
              <li><img src="images/type/rock.png"><a class="dropdown-item" href="#">Rock</a></li>
              <li><img src="images/type/bug.png"><a class="dropdown-item" href="#">Bug</a></li>
              <li><img src="images/type/ghost.png"><a class="dropdown-item" href="#">Ghost</a></li>
              <li><img src="images/type/steel.png"><a class="dropdown-item" href="#">Steel</a></li>
              <li><img src="images/type/fire.png"><a class="dropdown-item" href="#">Fire</a></li>
              <li><img src="images/type/water.png"><a class="dropdown-item" href="#">Water</a></li>
              <li><img src="images/type/grass.png"><a class="dropdown-item" href="#">Grass</a></li>
              <li><img src="images/type/electric.png"><a class="dropdown-item" href="#">Electric</a></li>
              <li><img src="images/type/psychic.png"><a class="dropdown-item" href="#">Psychic</a></li>
              <li><img src="images/type/ice.png"><a class="dropdown-item" href="#">Ice</a></li>
              <li><img src="images/type/dragon.png"><a class="dropdown-item" href="#">Dragon</a></li>
              <li><img src="images/type/dark.png"><a class="dropdown-item" href="#">Dark</a></li>
              <li><img src="images/type/fairy.png"><a class="dropdown-item" href="#">Fairy</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <% Pokedex.forEach(function(Pokemones){ %>
        
            
    <div class="card-container">
        <!-- Pokémon Image Section -->
        <div class="pokemon-card">
            <div class="container pokemon-image-container mt-4">
                <script>getI("<%=Pokemones.name%>")</script>
                <img id="imgOf<%=Pokemones.name%>" src="" class="pokemon-image"/>
            </div>

            <!-- Pokémon Name -->
            <div class="pokemon-name">
                <%=Pokemones.name%>
            </div>
        </div>
    </div>
    

</div><%}) %>
<button onclick = 'recargar("<%=next%>")' type="button" class="btn btn-info">Next</button>
  
     
</body>

</html>